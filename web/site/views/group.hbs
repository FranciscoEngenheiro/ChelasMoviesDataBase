<form action="/groups" method="GET">
    <input type="submit" value="Back">
</form>

<h4>{{group.name}}</h4>

<form action="/groups/{{id}}/editGroup" method="GET">
  <input type="submit" value="Edit">
</form>
<form action="/groups/{{id}}/delete" method="POST">
  <input type="submit" value="Delete Group">
</form>

<p><b>Description: </b>{{group.description}}</p>
<p><b>Movies total duration: </b>{{group.moviesTotalDuration}} mins</p>
<ul>
    <h4>Movies</h4>
  {{#each group.movies}}
    <li>
      <h2><a href="/movies/find/{{id}}">{{title}}</a></h2>
      <form action="/groups/{{../id}}/movies/{{id}}" method="POST">
        <input type="submit" value="Remove">
      </form>
    </li>
  {{/each}}
</ul>

<form action="/groups/{{id}}/movies/addMovie" method="GET">
    <input type="submit" value="Add Movie">
</form>