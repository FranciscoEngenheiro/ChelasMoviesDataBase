<form action="/groups" method="GET">
    <input type="submit" value="Back">
</form>

<h2>{{group.name}}</h2>

<form action="/groups/{{id}}/editGroup" method="GET">
    <input type="submit" value="Edit">
</form>

<form action="/groups/{{id}}/delete" method="POST">
    <input type="submit" value="Delete">
</form>

<p>{{group.description}}</p>
<p>Movies Total Duration: {{group.moviesTotalDuration}} mins</p>
<ul>
    <h2>Movies</h2>
  {{#each group.movies}}
    <li>
      <h4><a href="/movies/find/{{id}}">{{title}}</a></h4>
      <form action="/groups/{{../id}}/movies/{{id}}" method="POST">
        <input type="submit" value="Remove">
      </form>
    </li>
  {{/each}}
</ul>

<form action="/groups/{{id}}/movies/addMovie" method="GET">
    <input type="submit" value="Add Movie">
</form>