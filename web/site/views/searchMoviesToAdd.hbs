<script type="application/ecmascript" src="/cmdb-user-interface-site.mjs"></script>


<input type="button" value="Back" onclick='history.back()'>

<h4>Search results for: {{title}}</h4>
<ul>
  {{#each movies}}
    <li>
        <h2><a href="/movies/find/{{id}}">{{title}}</a></h2>
        <p>Description: {{description}}</p>
        <form action="/auth/groups/{{../groupId}}/movies" method="POST">
            <input type="hidden" value={{id}} name="movieId">
            <input type="submit" value="Add Movie">
        </form>

        <input type="button" value="Add movie via client script" id="b{{@index}}">
        <script type="application/ecmascript">
            addMovieToGroup('#b{{@index}}', '{{../token}}','{{../groupId}}','{{id}}')
        </script>
    </li>
  {{/each}}
</ul>